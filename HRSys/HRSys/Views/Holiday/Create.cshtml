@model HRSys.Models.HolidaySelf
@{
    ViewBag.Title = "請假";
    if (TempData["ErrorMessage"] != null)
    {
        <script>
            var message = @Html.Raw(Json.Encode( TempData["ErrorMessage"]));
            alert(message);
        </script>
    }
}

<h2>新增休假</h2>

@using (Html.BeginForm())
{
    <div>
        @Html.Label("員工帳號")
        @Html.EditorFor(model => model.UsrId, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
    </div>
    <br />
    <div>
        @Html.Label("請假日期")
        @Html.EditorFor(model => model.SDate, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <br />
    <input type="submit" value="確認請假" class="btn btn-primary" />    
}
@Html.ActionLink("返回", "Index", "Holiday", new { usrid = @ViewBag.usrid }, new { @class = "btn btn-default" })
<br />
